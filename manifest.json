{
  "manifest_version": 3,
  "name": "X Post Tracker",
  "description": "Track your X posts and replies per day and visualize them on a GitHub-style heat map.",
  "version": "0.1.0",
  "action": {
    "default_title": "X Activity Tracker",
    "default_popup": "src/popup/popup.html"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": ["https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["src/content/loader.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/injected/page/index.js",
        "src/injected/page/network.js",
        "src/injected/page/classify.js",
        "src/injected/page/utils.js",
        "src/injected/page/auth.js",
        "src/content/main.js",
        "src/content/inject.js",
        "src/content/messages.js",
        "src/content/tracker.js",
        "src/shared/constants.js",
        "src/shared/date.js",
        "src/shared/format.js",
        "src/shared/storage.js"
      ],
      "matches": ["https://x.com/*"]
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
